<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cons"
    android:background="@drawable/cancer"
    tools:context=".ui.activity.AddTopicActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppTheme.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppTheme.PopupMenu">

            <com.juacancer.models.ScrollingTextview
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="1"
                android:singleLine="true"
                android:textColor="@color/bgTitleRight"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/input_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:gravity="start"
        android:hint="Forum"
        android:inputType="textMultiLine|text|textAutoComplete|textCapSentences"
        android:minHeight="50dp"
        android:minLines="3"
        android:textAlignment="textStart"

        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/input_topc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:gravity="start"
        android:hint="Forum"
        android:inputType="textMultiLine|text|textAutoComplete|textCapSentences"
        android:minHeight="50dp"
        android:minLines="3"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit_topic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginHorizontal="16dp"
        android:text="Start a Private Consultation with the Cancer Consultant"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:visibility="visible"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/input_topic_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />


    <Button
        android:id="@+id/btn_submit_topic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        android:background="@drawable/button_shape"
        android:text="Ask"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_topic_title" />

</androidx.constraintlayout.widget.ConstraintLayout>